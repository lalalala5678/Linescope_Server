# Linescope Server Production Environment Configuration

# Flask Configuration
FLASK_ENV=production
FLASK_APP=core/factory.py
FLASK_DEBUG=False

# Server Configuration
HOST=0.0.0.0
PORT=5000
WORKERS=4
WORKER_CLASS=gthread
THREADS=2
WORKER_CONNECTIONS=1000
TIMEOUT=30
KEEPALIVE=5
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Application Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
DATA_STORE_INTERVAL_MINUTES=30
STREAM_FRAME_INTERVAL_SEC=0.2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s [%(levelname)s] %(name)s: %(message)s
LOG_MAX_BYTES=5242880
LOG_BACKUP_COUNT=3

# Security Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Database Configuration (if needed)
# DATABASE_URL=postgresql://username:password@localhost:5432/linescope
# REDIS_URL=redis://localhost:6379/0

# Performance Configuration
SEND_FILE_MAX_AGE_DEFAULT=31536000  # 1 year for static files
JSON_SORT_KEYS=False
JSONIFY_PRETTYPRINT_REGULAR=False

# Monitoring Configuration
ENABLE_PERFORMANCE_MONITORING=True
PERFORMANCE_REPORT_INTERVAL=300  # 5 minutes

# External Services
# SENTRY_DSN=your-sentry-dsn-here
# MONITORING_ENDPOINT=https://your-monitoring-service.com/api/metrics